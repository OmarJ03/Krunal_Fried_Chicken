                <span class="cart-bubble">
                    <%= Object.keys(cartQuantityMap).length %>
                </span>
                <% } else { %>
                    <span class="cart-bubble">0</span>
                    <% } %>
        </a>
        <a href="/profile?userId=<%= userId %>" class="profile-link">Profile</a>
        <a href="/logout" class="logout-link">Logout</a>
    </div>
