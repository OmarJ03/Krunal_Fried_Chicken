<!-- Navbar -->
<nav class="navbar">
    <div class="navbar-logo">
        <a href="/" style="text-decoration: none; color: white;">
            <h1>Krunal Fried Chicken</h1>
        </a>
    </div>
    <div class="navbar-links">
        <a href="/cart" class="cart-link">
            <img src="/assets/images/shopping-cart.png" class="cart-icon" alt="Cart Icon" />
